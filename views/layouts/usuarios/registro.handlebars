
<div class="card col-6">
  <h3 class="text-center p-3">Cadastre-se</h3>
  <div class="card-body">
    <form action="/usuarios/registro" method="post">
      <div class="form-group">
        <label for="nome">Nome: </label>
        <input
          type="text"
          class="form-control"
          id="nome"
          name="nome"
          required
        />

      </div>
      <div class="form-group">
        <label for="email">Email: </label>
        <input
          type="email"
          class="form-control"
          id="email"
          name="email"
          required
        />

      </div>

      <div class="form-group">
        <label for="senha">Senha: </label>
        <input
          type="password"
          class="form-control"
          id="senha"
          name="senha"
          required
        />
      </div>
              <label for="senha2">Repita a sua senha: </label>
        <input
          type="password"
          class="form-control"
          id="senha2"
          name="senha2"
          required
        />
      </div>
      {{#each erros}}
          <div class="alert alert-danger">{{texto}}</div>
      {{else}}
      {{/each}}
      <button type="submit" class="btn btn-primary mb-3">Criar conta</button>
    </form>
  </div>
</div>